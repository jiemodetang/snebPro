<view class="avatar-wrapper">
  <view>
    <view class="avatar">
      <image style="border-radius:50%;" src="{{avatarUrl}}"></image>
    </view>
    <view class="text">
      <text wx:if="{{userNickName}}">{{userNickName}}</text>
      <text wx:else bindtap="toLogin">注册 / 登录</text>
    </view>
    <view class="text">
      <text wx:if="{{userNickName}}">{{userInfo.province}}{{userInfo.city}}</text>
    </view>
    <view class="text">
      <text wx:if="{{userSign==2}}">{{"您还没有填写真实信息，暂不能借书"}}</text>
      <text wx:elif="{{userSign==1}}">{{"会员用户"}}</text>
    </view>
  </view>
</view>
<!-- 选择class -->
<view class="page">
    <view class="page__hd">
        <view class="page__title">Grid</view>
        <view class="page__desc">九宫格</view>
    </view>
    <view class="page__bd">
        <view class="weui-grids">
            <block wx:for="{{grids}}" wx:key="*this" >
                <navigator url="" class="weui-grid" hover-class="weui-grid_active">
                    <image class="weui-grid__icon" src="https://ss3.bdstatic.com/70cFv8Sh_Q1YnxGkpoWK1HF6hhy/it/u=4103883760,95408675&fm=26&gp=0.jpg" />
                    <view class="weui-grid__label">{{item.gridSelect}}</view>
                </navigator>
            </block>
        </view>
    </view>
</view>

<!-- 下面的选项 -->
<view class="weui-cells__title">烂七八糟的选项</view>
<view class="weui-cells weui-cells_after-title">
  <navigator url="" class="weui-cell weui-cell_access" hover-class="weui-cell_active">
    <view class="weui-cell__hd">
      <image src="https://cdn.11bee.com/picture/imall/newindexb/jhs.png" style="margin-right: 5px;vertical-align: middle;width:20px; height: 20px;"></image>
    </view>
    <view class="weui-cell__bd">选择你的class</view>
    <view class="weui-cell__ft weui-cell__ft_in-access">跳转</view>
  </navigator>

</view>